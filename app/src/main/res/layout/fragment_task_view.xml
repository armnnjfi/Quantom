<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.TaskViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded2_background">
        
        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:padding="50dp"
            android:layout_height="wrap_content"
            android:text="عنوان وظیفه"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/vazirmedium"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/padcast"
            android:layout_height="150dp"
            android:contentDescription="caver" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="توضیحات و قوانین وظیفه"
            android:fontFamily="@font/vazirbold"
            android:gravity="center"
            android:padding="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="متن پیش فرض "
            android:fontFamily="@font/vazirthin"
            android:gravity="center"
            android:padding="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazirmedium"
            android:backgroundTint="#329664"
            android:text="منابع وظیفه"/>
        <Button
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:fontFamily="@font/vazirmedium"
            android:layout_height="wrap_content"
            android:backgroundTint="#329664"
            android:text="شروع وظیفه"/>
        <Button
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:fontFamily="@font/vazirmedium"
            android:layout_height="wrap_content"
            android:backgroundTint="#329664"
            android:text="بررسی"

            />
    </LinearLayout>

</LinearLayout>